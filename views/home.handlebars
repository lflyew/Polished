<!-- Our main/landing page -->
{{!-- Api call to get all of the services from Service model (make fake data to have to do the fetch from this model) --}}

<div class="flex-container">
    <h2 id="title"class="text-center p-2">Polished</h2>
    <img class="star" src="https://www.freeiconspng.com/thumbs/white-star-icon/white-star-icon-10.png" alt="star">

    <h1 id="review"class="text-center fs-4 p-3">"The best appointment booking application ever" -Forbes</h1>

    <h1 id="service"class="text-center fs-2 p-3">Services</h1>

    <div class="d-flex flex-wrap justify-content-center">
        {{#each services as |service| }}
        <ul class="container col tex-center align-items-start">
            <li class ="col">
            <a href="/service/{{service.id}}">
                <img class="border border-dark m-4" id="image" src={{service.image_link}}>
            </a>
            <div class="overlay">
                <a id="description">{{service.description}}</a>
            </div>
            </li>
            <li>
                <h3 class="text-center" id="service-name">{{service.name}}
                </h3>
            </li>
        </ul>
         {{/each}}
    </div>
        
</div>

<script src="/javascript/home.js"></script>
